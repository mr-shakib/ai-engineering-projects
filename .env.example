# =============================================================================
# AI Engineering Projects - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# =============================================================================
# API Keys - Required for most projects
# =============================================================================

# OpenAI API Key (for GPT models and embeddings)
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-key-here

# Anthropic API Key (for Claude models)
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Cohere API Key (for embeddings and reranking)
# Get yours at: https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your-cohere-key-here

# Hugging Face API Token (for open-source models)
# Get yours at: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=hf_your-token-here

# =============================================================================
# Vector Database Configuration (Optional)
# =============================================================================

# Pinecone
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=your-index-name

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key-here

# Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your-qdrant-key-here

# =============================================================================
# Model Configuration
# =============================================================================

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small
# Options: text-embedding-3-small, text-embedding-3-large, text-embedding-ada-002
EMBEDDING_DIMENSION=1536

# LLM Configuration
LLM_MODEL=gpt-4-turbo-preview
# Options: gpt-4-turbo-preview, gpt-4, gpt-3.5-turbo, claude-3-opus-20240229
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000
LLM_TOP_P=1.0

# =============================================================================
# Application Settings
# =============================================================================

# Environment
ENVIRONMENT=development
# Options: development, staging, production

# Logging
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json
# Options: json, text

# =============================================================================
# Database Configuration (if applicable)
# =============================================================================

# PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# MongoDB
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DB_NAME=ai_projects

# Redis (for caching)
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Monitoring & Observability (Optional)
# =============================================================================

# Weights & Biases
WANDB_API_KEY=your-wandb-key-here
WANDB_PROJECT=ai-engineering-projects

# LangSmith (for LangChain debugging)
LANGCHAIN_API_KEY=your-langsmith-key-here
LANGCHAIN_PROJECT=your-project-name
LANGCHAIN_TRACING_V2=true

# Sentry (for error tracking)
SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# Rate Limiting & Performance
# =============================================================================

# API Rate Limits (requests per minute)
OPENAI_RPM_LIMIT=3500
ANTHROPIC_RPM_LIMIT=50

# Batch Processing
BATCH_SIZE=100
MAX_WORKERS=4

# Caching
ENABLE_CACHE=true
CACHE_TTL=3600
CACHE_DIR=.cache

# =============================================================================
# Security
# =============================================================================

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your-32-byte-base64-encoded-key-here

# JWT Secret (if using authentication)
JWT_SECRET=your-jwt-secret-here
JWT_EXPIRATION=3600

# =============================================================================
# Feature Flags (Optional)
# =============================================================================

ENABLE_TELEMETRY=false
ENABLE_DEBUG_MODE=false
ENABLE_PROFILING=false

# =============================================================================
# Custom Project Settings
# =============================================================================

# Add project-specific environment variables here
# PROJECT_SPECIFIC_VAR=value
